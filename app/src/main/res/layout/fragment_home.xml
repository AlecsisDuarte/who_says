<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_gradient_animation"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="@dimen/card_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/card_background_color"

            android:padding="@dimen/card_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/viga"
                android:text="@string/app_name"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simon" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_container_inner_padding" />

        <FrameLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/sound_button"
                android:layout_width="@dimen/imagebutton_width"
                android:layout_height="@dimen/imagebutton_height"
                android:layout_gravity="start"
                android:src="@mipmap/sound_on_icon" />

            <ImageButton
                android:layout_width="@dimen/imagebutton_width"
                android:layout_height="@dimen/imagebutton_height"
                android:layout_gravity="center"
                android:src="@mipmap/settings_icon"/>


            <ImageButton
                android:layout_width="@dimen/imagebutton_width"
                android:layout_height="@dimen/imagebutton_height"
                android:src="@mipmap/scoreboard_icon"
                android:layout_gravity="end"/>


        </FrameLayout>
    </LinearLayout>

</FrameLayout>
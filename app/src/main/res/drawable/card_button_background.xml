<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/card_button_shadow_color"/>
                    <corners android:radius="@dimen/card_border_radius"/>
                </shape>
            </item>
            <item android:bottom="@dimen/card_button_elevation_pressed_down" android:left="@dimen/card_button_elevation_pressed_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/card_button_background_pressed"/>
                    <corners android:radius="@dimen/card_border_radius"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item>
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/card_button_shadow_color"/>
                    <corners android:radius="@dimen/card_border_radius"/>
                </shape>
            </item>
            <item android:bottom="@dimen/card_button_elevation_down" android:left="@dimen/card_button_elevation_left">
                <shape android:shape="rectangle">
                    <solid android:color="@color/card_button_background_color"/>
                    <corners android:radius="@dimen/card_border_radius"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:angle="315"
                android:startColor="@color/simon_yellow"
                android:endColor="@color/simon_green"/>
        </shape>
    </item>
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:angle="360"
                android:startColor="@color/simon_yellow"
                android:endColor="@color/simon_blue"/>
        </shape>
    </item>
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:angle="225"
                android:startColor="@color/simon_blue"
                android:endColor="@color/simon_red"/>
        </shape>
    </item>

    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:angle="360"
                android:startColor="@color/simon_red"
                android:endColor="@color/simon_green"/>
        </shape>
    </item>


</animation-list>
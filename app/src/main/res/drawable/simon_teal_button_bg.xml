<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/card_shadow_color" />
                    <corners android:radius="@dimen/card_border_radius" />

                </shape>
            </item>
            <item android:bottom="@dimen/card_button_elevation_pressed_down">
                <shape>
                    <solid android:color="@color/simon_teal_light" />
                    <corners android:radius="@dimen/card_border_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_hovered="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/card_shadow_color" />
                    <corners android:radius="@dimen/card_border_radius" />

                </shape>
            </item>
            <item android:bottom="@dimen/card_button_elevation_pressed_down">
                <shape>
                    <solid android:color="@color/simon_teal_dark" />
                    <corners android:radius="@dimen/card_border_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/card_shadow_color" />
                    <corners android:radius="@dimen/card_border_radius" />

                </shape>
            </item>
            <item android:bottom="@dimen/card_button_elevation_down">
                <shape>
                    <solid android:color="@color/simon_teal" />
                    <corners android:radius="@dimen/card_border_radius" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>

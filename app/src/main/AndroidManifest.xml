<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="sh.now.alecsisduarte.who_says">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/who_says_icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/who_says_icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".services.MusicPlayerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameBoardActivity" />
    </application>

</manifest>